{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "verbose": {
            "format": "%(levelname)s %(asctime)s %(module)s %(process)d %(thread)d %(message)s"
        },
        "simple": {
            "format": "%(levelname)s %(message)s"
        }
    },
    "filters": {
        "require_debug_true": {
            "()": "django.utils.log.RequireDebugTrue"
        }
    },
    "handlers": {
        "console": {
            "level": "INFO",
            "filters": ["require_debug_true"],
            "class": "logging.StreamHandler",
            "formatter": "simple"
        },
        "mail_admins": {
            "level": "ERROR",
            "class": "django.utils.log.AdminEmailHandler"
        },
        "file": {
            "level": "INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "/home/ubuntu/data/logs/blockserver/blockserver.log",
            "formatter": "verbose",
			"maxBytes": 104857600,
			"backupCount": 30
        },
        "logfile_blockbtc": {
            "level": "INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "/home/ubuntu/data/logs/blockserver/block_btc.log",
            "maxBytes": 104857600,
            "backupCount": 30,
            "formatter": "simple"
        },
        "logfile_blockbtctx": {
            "level": "INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "/home/ubuntu/data/logs/blockserver/block_btc_tx.log",
            "maxBytes": 104857600,
            "backupCount": 30,
            "formatter": "simple"
        },
        "logfile_eth_address": {
            "level": "INFO",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "/home/ubuntu/data/logs/blockserver/block_eth_adress.log"
            "maxBytes": 104857600,
            "backupCount": 30,
            "formatter": "simple"
        },
        "logfile_eth_block": {
            "level": "INFO",
            "class": "logging.handlers.RotatingFilelHandler",
            "filename": "/home/ubuntu/data/logs/blockserver/block_eth_block.log",
            "maxBytes": 104857600,
            "backupCount": 30,
            "formatter": "simple"
        }

    },
    "loggers": {
        "django": {
            "handlers": ["console"],
            "propagate": true
        },
        "django.request": {
            "handlers": ["file","console"],
            "level": "INFO",
            "propagate": true
        },
        "block_btc_logs": {
            "level": "INFO",
            "handlers": ["console", "logfile_blockbtc"],
            "propagate": true
        },
        "block_btc_tx_logs": {
            "level": "INFO",
            "handlers": ["console", "logfile_blockbtctx"],
            "propagate": true
        },
        "block_eth_block": {
            "level": "INFO",
            "handlers": ["console", "logfile_eth_block"],
            "propagate": true
        },
        "block_eth_address": {
            "level": "INFO",
            "handlers": ["console", "logfile_eth_adress"],
            "propagate": true
        }
    }
}
